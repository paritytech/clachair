<% if flash[:notice] %>
  <div class="alert alert-info text-center">
    <a href="#" data-dismiss="alert" class="close">×</a>
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-danger text-center">
    <a href="#" data-dismiss="alert" class="close">×</a>
    <%= flash[:alert] %>
  </div>
<% end %>