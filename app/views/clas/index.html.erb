<div class="row">
  <div class="col-10 offset-1">
    <br>
    <div align="center">
      <%= link_to 'Create new CLA', new_cla_path, class: 'btn btn-outline-info my-2 my-sm-0' %>
    </div>
    <br>
    <br>
    <h1 align="center">CLAs list:</h1>
    <ul class="list-group">
      <%- @clas.each do |cla| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to cla.name, cla_path(cla) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>